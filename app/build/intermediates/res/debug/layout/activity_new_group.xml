<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.izhang.roomator.newGroup"
    android:background="@color/darkgrey">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/groupName"
        android:background="#ffffff"
        android:paddingTop="15dp"
        android:paddingLeft="10dp"
        android:hint="Group Name"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:elevation="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Group"
        android:id="@+id/addGroupButton"
        android:paddingTop="10dp"
        android:layout_below="@+id/groupName"
        android:layout_marginTop="15dp"
        android:layout_alignLeft="@+id/groupName"
        android:layout_alignStart="@+id/groupName"
        android:layout_alignRight="@+id/groupName"
        android:layout_alignEnd="@+id/groupName"
        android:elevation="10dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/groupID"
        android:background="#ffffff"
        android:paddingTop="15dp"
        android:paddingLeft="10dp"
        android:hint="Group ID"
        android:layout_below="@+id/addGroupButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:elevation="10dp"
        android:textAlignment="center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join Group"
        android:id="@+id/joinGroupButton"
        android:paddingTop="10dp"
        android:layout_below="@+id/groupID"
        android:layout_alignRight="@+id/groupID"
        android:layout_alignEnd="@+id/groupID"
        android:layout_alignLeft="@+id/groupID"
        android:layout_alignStart="@+id/groupID"
        android:layout_marginTop="15dp"
        android:elevation="10dp" />

</RelativeLayout>
