<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.izhang.roomator.newGroup"
    android:background="@color/accent"
    android:id="@+id/relativelayout">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/groupName"
        android:background="#ffffff"
        android:paddingTop="15dp"
        android:paddingLeft="10dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:elevation="2dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:hint="Group Name"
        android:layout_marginTop="10dp"
        android:textColor="@color/primary_dark"
        android:textColorHint="@color/primary_dark"
        android:textSize="24dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Group"
        android:id="@+id/addGroupButton"
        android:paddingTop="22dp"
        android:layout_below="@+id/groupName"
        android:layout_marginTop="15dp"
        android:layout_alignLeft="@+id/groupName"
        android:layout_alignStart="@+id/groupName"
        android:layout_alignRight="@+id/groupName"
        android:layout_alignEnd="@+id/groupName"
        android:elevation="2dp"
        android:textSize="20dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:elevation="6dp"
        android:adjustViewBounds="true" />

    <EditText
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/groupID"
        android:background="#ffffff"
        android:paddingTop="15dp"
        android:paddingLeft="10dp"
        android:hint="Group ID"
        android:elevation="2dp"
        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/joinGroupButton"
        android:layout_marginTop="25dp"
        android:textColor="@color/primary_dark"
        android:textColorHint="@color/primary_dark"
        android:textSize="24dp"
        android:layout_below="@+id/addGroupButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join Group"
        android:id="@+id/joinGroupButton"
        android:paddingTop="22dp"
        android:elevation="2dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/groupID"
        android:layout_centerHorizontal="true"
        android:textSize="20dp" />

</RelativeLayout>
